{
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "Introduction",
              "wrap": true
            }
          ],
          "spacing": "None"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Hi, ${AttendeeName} please answer the questions to introduce yourself to your collegues",
      "size": "Medium",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "I work in organization (BA & Division):",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "txtQAOrg"
    },
    {
      "type": "TextBlock",
      "text": "My role:",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "txtQARole"
    },
    {
      "type": "TextBlock",
      "text": "Country where I live in:",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "txtQACountry"
    },
    {
      "type": "TextBlock",
      "text": "In my spare-time I like to:",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "txtQASpareTimeActivities"
    },
    {
      "type": "TextBlock",
      "text": "My phone number:",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "txtQAMobilePhoneNumber"
    },
    {
      "type": "TextBlock",
      "text": "Attach a picture of you:",
      "wrap": true
    },
    {
      "type": "ImageSet",
      "images": [
        {
          "type": "Image",
          "size": "Medium"
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Submit",
          "style": "positive",
          "data": {
            "action": "SaveIntroductionQuestions",
            "SPID": "${SharePointId}"
          }
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}