{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.11/MicrosoftTeams.schema.json",
    "version": "1.0.0",
    "manifestVersion": "1.11",
    "id": "<<BOT_APP_ID>>",
    "packageName": "com.package.name",
    "name": {
        "short": "Learning Companion",
        "full": ""
    },
    "developer": {
        "name": "Contoso, Inc.",
        "mpnId": "",
        "websiteUrl": "https://constoso.com",
        "privacyUrl": "https://constoso.com",
        "termsOfUseUrl": "https://constoso.com"
    },
    "description": {
        "short": "The Learning companion is here to help you stay on track with your courses",
        "full": "The Learning companion bot is here to help you stay on track with your courses, by sending you reminders and helping you stay on top of your pending tasks"
    },
    "icons": {
        "outline": "outline.png",
        "color": "color.png"
    },
    "accentColor": "#7B83EB",
    "bots": [
        {
            "botId": "<<BOT_APP_ID>>",
            "scopes": [
                "team",
                "personal"
              ],
            "isNotificationOnly": false,
            "supportsFiles": false
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "token.botframework.com"
    ]
}